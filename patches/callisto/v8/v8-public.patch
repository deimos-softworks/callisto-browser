+struct V8_EXPORT ScopeInfo {
+  enum Type {
+    kGlobal = 0,
+    kLocal,
+    kWith,
+    kClosure,
+    kCatch,
+    kBlock,
+    kScript,
+    kEval,
+    kModule
+  };
+
+  Type type;
+  Local<Object> object;
+  Local<Value> name;
+};
+
+enum class V8_EXPORT FunctionStatus {
+  kOk,
+  kNotFunction,
+  kBuiltinFunction,
+  kNativeFunction,
+  kApiFunction,
+  kWasmFunction,
+  kNotCompiled,
+  kNoBytecode,
+  kLengthMismatch,
+  kGeneratorMismatch,
+  kAsyncMismatch,
+  kDerivedConstructorMismatch,
+};
+
+V8_EXPORT FunctionStatus ValidateFunction(Local<Context> context,
+                                          Local<Function> function);
+
+V8_EXPORT FunctionStatus ValidateFunctionPair(Local<Context> context,
+                                              Local<Function> target,
+                                              Local<Function> replacement);
+
+V8_EXPORT void QueryObjects(Local<Context> context, Local<Object> prototype,
+                            std::vector<Global<Object>>* objects);
+
+V8_EXPORT bool GetFunctionScopes(Isolate* isolate, Local<Function> function,
+                                 std::vector<ScopeInfo>* scopes);
+
+V8_EXPORT MaybeLocal<Value> GetScopeVariable(Isolate* isolate,
+                                              Local<Function> function,
+                                              int scope_index,
+                                              Local<String> name);
+
+V8_EXPORT bool SetScopeVariable(Isolate* isolate,
+                                 Local<Function> function,
+                                 int scope_index,
+                                 Local<String> name,
+                                 Local<Value> value);
+
+V8_EXPORT MaybeLocal<Array> GetScopeVariableNames(Isolate* isolate,
+                                                   Local<Function> function,
+                                                   int scope_index);
+
+V8_EXPORT bool HasScopeVariable(Isolate* isolate,
+                                 Local<Function> function,
+                                 int scope_index,
+                                 Local<String> name);
+
+V8_EXPORT MaybeLocal<Function> CloneFunction(Local<Context> context,
+                                             Local<Function> function);
+
+V8_EXPORT MaybeLocal<Object> DumpFunction(Local<Context> context,
+                                          Local<Function> function);
+
+V8_EXPORT MaybeLocal<Function> BuildFunction(Local<Context> context,
+                                             Local<Object> data,
+                                             Local<Function> template_func = Local<Function>());
+
+V8_EXPORT bool HookFunction(Local<Context> context,
+                            Local<Function> target,
+                            Local<Function> replacement);
+
+V8_EXPORT bool RestoreFunction(Local<Context> context, Local<Function> target);
+
+V8_EXPORT bool IsFunctionHooked(Local<Context> context, Local<Function> target);
+
+V8_EXPORT bool SetProxyHandler(Local<Context> context, Local<Proxy> proxy,
+                               Local<Object> new_handler);
+
+V8_EXPORT void GetProxyInternals(Local<Proxy> proxy, Local<Value>* target,
+                                 Local<Value>* handler);
+
+V8_EXPORT bool UnfreezeObject(Local<Context> context, Local<Object> object);
+
+V8_EXPORT bool UnsealObject(Local<Context> context, Local<Object> object);
+
+V8_EXPORT bool MakeExtensible(Local<Context> context, Local<Object> object);
+
+V8_EXPORT bool OverwriteProperty(Local<Context> context, Local<Object> object,
+                                 Local<Name> key, Local<Value> value,
+                                 PropertyAttribute attributes);
